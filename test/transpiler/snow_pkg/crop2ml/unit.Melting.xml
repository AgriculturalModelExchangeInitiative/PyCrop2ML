<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ModelUnit PUBLIC " " "https://raw.githubusercontent.com/AgriculturalModelExchangeInitiative/crop2ml/master/ModelUnit.dtd">
<ModelUnit modelid="STICS.Snow.Melting" name="Melting" timestep="1" version="1.0">
	<Description>
		<Title>snow in the process of melting</Title>
		<Authors>STICS</Authors>
		<Institution>INRA</Institution>
		<Reference>-</Reference>
		<Abstract>-</Abstract>
	</Description>
	<Inputs>
		<Input name="jul" description="current day of year for the calculation" inputtype="variable" variablecategory="auxiliary" datatype="INT" default="0" min="0" max="366" unit="d" uri=""/>
		<Input name="P_Tmf" description="threshold temperature for snow melting " inputtype="parameter" parametercategory="constant" datatype="DOUBLE" default="0.0" min="0.0" max="5000.0" unit="째C" uri=""/>
		<Input name="P_DKmax" description="difference between the maximum and the minimum melting rates" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" default="0.0" min="0.0" max="5000.0" unit="mm 째C-1 d-1" uri=""/>
		<Input name="P_Kmin" description="minimum melting rate on 21 December" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" default="0.0" min="0.0" max="5000.0" unit="mm 째C-1 d-1" uri=""/>
		<Input name="tavg" description="average temperature" inputtype="variable" variablecategory="state" datatype="DOUBLE" default="0.0" min="0.0" max="100.0" unit="째C" uri=""/>
    </Inputs>
	<Outputs>
		<Output name="M" description="snow in the process of melting" variablecategory="auxiliary" datatype="DOUBLE" min="0.0" max="500.0" unit="mm d-1" uri=""/>
	</Outputs>
	<Algorithm language="Cyml" platform="" filename="algo/pyx/Melting.pyx" />
	<Parametersets>
		<Parameterset name="paramerterSet1" description="set Parameters for TempMax unit" >
            <Param name="P_Tmf">70.0</Param>
            <Param name="P_DKmax">70.0</Param>
            <Param name="P_Kmin">70.0</Param>
		</Parameterset>
	</Parametersets>
	<Testsets>
        <Testset name="check snow model" parameterset = "paramerterSet1" description="some values in there" >
        	<Test name ="test_snow1">
                <InputValue name="tavg">0.279</InputValue>
                <InputValue name="jul">0.279</InputValue>
			    <OutputValue name="Mrf" precision ="2">45.6</OutputValue>
        	</Test>
        </Testset>
	</Testsets>
</ModelUnit>