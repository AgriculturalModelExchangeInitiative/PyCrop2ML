<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ModelUnit PUBLIC " " "https://raw.githubusercontent.com/AgriculturalModelExchangeInitiative/crop2ml/master/ModelUnit.dtd">
<ModelUnit modelid="STICS.Snow.SnowAccumulation" name="SnowAccumulation" timestep="1" version="1.0">
	<Description>
		<Title>snowfall accumulation  calculation</Title>
		<Authors>STICS</Authors>
		<Institution>INRA</Institution>
		<Reference>-</Reference>
		<Abstract>-</Abstract>
	</Description>
	<Inputs>
		<Input name="P_tsmax" description="maximum daily air temperature (tmax) below which all precipitation is assumed to be snow" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" default="0.0" min="0.0" max="1000" unit="°C" uri=""/>
		<Input name="tmax" description="current maximum air temperature" inputtype="variable" variablecategory="auxiliary" datatype="DOUBLE" default="0.0" min="0.0" max="5000.0" unit="°C" uri=""/>
		<Input name="P_trmax" description="tmax above which all precipitation is assumed to be rain" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" default="0.0" min="0.0" max="5000.0" unit="°C" uri=""/>
	</Inputs>
	<Outputs>
		<Output name="Snowaccu" description="snowfall accumulation" variablecategory="auxiliary" datatype="DOUBLE" min="0.0" max="500.0" unit="mm" uri=""/>
	</Outputs>
	<Algorithm language="Cyml" platform="" filename="algo/pyx/SnowAccumulation.pyx" />
	<Parametersets>
		<Parameterset name="paramerterSet1" description="set Parameters for TempMax unit" >
            <Param name="P_trmax">70.0</Param>
            <Param name="P_tsmax">70.0</Param>
		</Parameterset>
	</Parametersets>
	<Testsets>
        <Testset name="check snow model" parameterset = "paramerterSet1" description="some values in there" >
        	<Test name ="test_snow1">
				<InputValue name="tmax">0.279</InputValue>
			    <OutputValue name="Snowaccu" precision ="2">45.6</OutputValue>
        	</Test>
        </Testset>
	</Testsets>
</ModelUnit>